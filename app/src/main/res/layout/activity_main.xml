<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/white">

    <Button
        android:id="@+id/btnEquals"
        android:onClick="onEqual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2FFF00"
        android:text="="
        android:textSize="38sp"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout">

        <Button
            android:onClick="onOperator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#62AABF"
            android:text="%"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginEnd="3dp"/>

        <Button
            android:onClick="onSqrt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#62AABF"
            android:text="âˆš"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginEnd="3dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#62AABF"
            android:text="+/-"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginEnd="3dp"/>

        <Button
            android:id="@+id/btnDel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#62AABF"
            android:text="DEL"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btnEquals"
        android:layout_marginBottom="3dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginBottom="3dp"
            >

            <Button
                android:onClick="onDigit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BCF174"
                android:text="7"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:onClick="onDigit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BCF174"
                android:text="8"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:onClick="onDigit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BCF174"
                android:text="9"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:id="@+id/btnMultiply"
                android:onClick="onOperator"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#79C7F1"
                android:text="*"
                android:textColor="@color/white"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginBottom="3dp">

            <Button
                android:onClick="onDigit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BCF174"
                android:text="4"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:onClick="onDigit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BCF174"
                android:text="5"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:onClick="onDigit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BCF174"
                android:text="6"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:id="@+id/btnSub"
                android:onClick="onOperator"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BC1D62"
                android:text="-"
                android:textColor="@color/white"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginBottom="3dp">

            <Button
                android:onClick="onDigit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BCF174"
                android:text="1"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:onClick="onDigit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BCF174"
                android:text="2"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:onClick="onDigit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BCF174"
                android:text="3"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:id="@+id/btnAdd"
                android:onClick="onOperator"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#79C7F1"
                android:text="+"
                android:textColor="@color/white"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#0768F8"
                android:text="C"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:onClick="onDigit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BCF174"
                android:text="0"
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:id="@+id/btnDot"
                android:onClick="onDecimalPoint"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#0768F8"
                android:text="."
                android:textColor="@color/white"
                android:layout_marginEnd="3dp"/>

            <Button
                android:id="@+id/btnDiv"
                android:onClick="onOperator"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="#BC1D62"
                android:text="/"
                android:textColor="@color/white"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/calcField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="196"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>